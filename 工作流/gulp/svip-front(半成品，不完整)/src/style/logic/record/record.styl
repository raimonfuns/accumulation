@import '../../common/_var.styl';
@import '../../common/_paging.styl';
@import '../../common/_left-nav.styl';
.record-main {
	width: 1000px;
	margin: 0 auto;
	padding-top: 30px;
	padding-bottom: 30px;
}
.record-left {
	width: 270px;
} 
.record-right {
	width: 690px;
}
.record-content {

}
.record-content-dl {
	&>dt {
		font-size: 18px;
		color: #333;
		height: 30px;
		line-height: 30px;
		margin-bottom: 5px;
	}
	&>dd {
		background-color: #fff;
	}
}
.record-nav-box {
	height: 48px;
	border-top:#f7eac9 solid 1px;
	border-left:#f7eac9 solid 1px;
	border-right:#f7eac9 solid 1px;
	border-bottom:#f1d181 solid 1px;
	color: #666;
	font-size: 16px;
	position: relative;
}
.record-nav-ul {
	position: absolute;
	left: 0;
	top: 0;
	height: 50px;
	line-height: 50px;
	&>li {
		float: left;
		padding: 0 25px;
		cursor: pointer;
	}
	&>.curr {
		border:#f1d181 solid 1px;
		background-image: url($tabBg);
		background-repeat: repeat-x;
		height: 48px;
		line-height: 48px;
		color: #82570a
	}
}

.record-list-box {
	

}
.record-table-box {
	border-left:#f7eac9 solid 1px;
	border-right:#f7eac9 solid 1px;
	&>table {
		width: 100%
	}
}
.table-th {
	&>th {
		background-image: url($thBg);
		background-repeat: repeat-x;
		height: 39px;
		border-bottom:#f7eac9 solid 1px;
		color: #82570a;
		font-size: 14px;
	}
}
.table-row {
	&>td {
		border-bottom:#f7eac9 solid 1px;
		color: #333;
		font-size: 14px;
		text-align: center;
		line-height: 24px;
		span {
			color: #cdad5e;
			cursor: pointer;
		}
		em {
			width: 14px;
			height: 9px;
			overflow: hidden;
			display: inline-block;
			position: relative;
			i {
				border-left:transparent solid 7px;
				border-right:transparent solid 7px;
				display: block;
				position: absolute;
				left: 0;
				top:0;
				height: 0;
			}
			.dw {
				border-top:#cecece solid 9px;
				border-bottom:transparent;
			}
			.up {
				border-top:transparent;
				border-bottom:#cdad5e solid 9px;
			}
		}
		
			
	}
}
.news-tr {
	&>td {
		padding: 10px 0;
	}
	&>.msg-td {
		text-align: left;
	}
}
.table-note {
	display: none;
	&>td {
		border-bottom:#f7eac9 solid 1px;
		color: #333;
		font-size: 14px;
		text-align: center;
		font-size: 12px;
		&>dl {
			padding: 5px 30px;
			text-align: left;
			line-height: 20px;
			color: #666666;
			&>dt {
				color: #cdad5e;
			}
		}
			
	}
}

.consume-dl {
	margin-top: 25px
}

.consume-tr {
	&>td {
		padding: 10px 0;
	}
}

.record-paging {
	margin-top: 10px;
	float: right;
}

.select-date {
	background-color: #f3f3f3;
	padding: 0 0 10px;
	.text-span {
		display: block;
		height: 32px;
		line-height: 32px;
		color: #333;
		font-size: 14px;
		padding: 0 10px;
	}
	.date-box {
		position: relative;
		input {
			width: 135px;
			height: 30px;
			border: #dbdbdb solid 1px;
			padding: 0 30px 0 10px;
			color: #52596b;
			font-size: 14px;
			line-height: 30px;
		}
		.date-icon {
			background-image: url($icon);
			background-repeat: no-repeat;
			background-position:-273px -389px;
			width: 17px;
			height: 15px;
			display: block;
			position: absolute;
			right: 10px;
			top: 8px;
			cursor: pointer;
		}
	}
}

.query-btn {
	margin-left: 20px
}

.consume-pages {
	text-align: right;
	padding-top: 20px;
	background-color: #f3f3f3
}