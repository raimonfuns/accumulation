.details {
	position: absolute;
	width: 100%;
	height: 100%;
	left: 0;
	top: 0;
	display: none;
}
.deta-pie {
	position: absolute;
	.deta-mark {
		background-color:#000;
		display: block;
		filter:unquote('alpha(opacity=60)');
		opacity: .6;
		width: 100%;
		height: 100%;
	}
	.gap {
		filter:unquote('alpha(opacity=80)');
		opacity: .8; 
	}
	a {
		display: block;
		position: absolute;
		left: 0;
		top:0;
		width: 100%;
		height: 100%;
		.ic {
			background-image: url($icon);
			background-repeat: no-repeat;
			display: block;
			width: 25px;
			height: 25px;
			transform: unquote('rotateY(0)');
			transition:unquote('transform .5s');
		}
		p {
			color: #fff;
			text-align: center;
			font-size: 14px;
			height: 20px;
			line-height: 20px;
		}
		&:hover {
			p {
				color: #cdad5e;
			}
			.ic {
				transform:unquote('rotateY(360deg)');
			}
		}
	}
}
