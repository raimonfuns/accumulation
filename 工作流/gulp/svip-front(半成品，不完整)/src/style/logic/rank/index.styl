/*variable*/
$borderColor = #f7eac9;
$color = #D6BB7C;
$iconUrl = 'http://file.do.yy.com/group3/M02/5C/47/tz0GSFXevIGASodMAAC_yMZKsKg985.png';

a , span{
	color: #333;
}

.container {
	width: 1000px;
	margin: 30px auto 0;
}
/*slider*/
.block-row {
	margin-bottom: 30px;
}
.slide-box { 
	width: 730px;
	height: 300px;
	overflow: hidden;
	position: relative;
}
.slide-list {
	height: 100%;
	li {
		float: left;
		height: 100%;
	} 
	img {
		width: 730px;
		height: 300px;
		display: block;
	}
}
.slide-btn {
	height: 15px;
	position: absolute;
	right: 10px;
	bottom:10px;
	li {
		float: left;
		height: 100%;
		width: 15px;
		margin-left: 10px;
		background-color: #c8c8c8;
		cursor: pointer;
	}
	.curr {
		background-color: #cdad5e;
	}
}

/*rankList*/
.rankListMod {
	width: 490px;
	.title {
		height: 38px;
		line-height: 38px;
		text-indent: 20px;
		color: #82570A;
		font-size: 18px;
		background: #F7EAC9;
	}
	.rankList {
		border: 1px solid $borderColor;
		border-bottom: none;
	}
	li {
		font-size: 16px;
		background: #fff;
		height: 49px;
		border-bottom: 1px solid $borderColor;
		overflow: hidden;
		position: relative;
		.round-portrait {
			width: 40px;
			height: 40px;
			background: url(img/tx.png);
			margin: 5px 0 0 20px;
			border-radius: 20px;
		}
		.userInfoWrap {
			font-size: 16px;
			overflow: hidden;
		}
		.userName {
			font-size: 14px;
			height: 49px;
			line-height: 49px;
			margin-left: 10px;
		}
		span {
			font-size: 12px;
			text-align: center;
		}
	}
	.even {
		background: #FCFAF4;
	}
}
.iconLeftList {
	line-height: 18px;
	margin: 12px 0 0 30px;
}
.iconRightList {
	margin: 7px 0 0 30px;
	color: #fff;
	line-height: 26px;
}

