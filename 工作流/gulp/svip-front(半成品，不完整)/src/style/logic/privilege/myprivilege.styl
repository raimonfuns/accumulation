.privilege-main{
	width: 1000px;
	margin: 0 auto;
	padding-top: 30px;
	> .fl{
		width: 270px;
	}
	> .fr{
		width: 690px;
	}
}

.pri-box{
	margin-bottom: 30px;
	h1{
		color: #333;
		font-size: 18px;
		margin-bottom: 10px;
	}
}

.pri-box-header{
	margin-bottom: 10px;
	overflow:hidden;
	h1{
		float:left;
		margin: 0;
	}
	a{
		float:right;
		color: #333;
	}
}

.pri-box1{
	.pri-content-table{
		height: 98px;
	}
}

.pri-box2{
	.pri-content-table{
		height: 120px;
		td{
			width: 230px;
		}
		span{
			position: relative;
			top: -38px;
			display: inline-block;
			*display: inline;
			*zoom: 1;
			text-align: left;
			width: 90px;
			margin-left: 10px;
		}
	}
}
.pri-box3,.pri-box4{
	display: none;
}
.pri-box5{
	.pri-content-table{
		td{
			padding: 20px 0;
		}
		a{
			margin-top: 10px;
		}
	}
}

.pri-content-table{
	width: 100%;
	background: #fff;
	border: 1px solid border-color;
	text-align:center;
	color: #333;
	font-size: 16px;
	table-layout:fixed;
	td{
		border: 1px solid border-color;
		width: 100px;
		max-width: 100px;
		font-size: 14px;
		&.td-large{
			width: 170px;
			height:49px;
		}
	}
	.td-label{
		display: inline-block;
		*display: inline;
		*zoom: 1;
		color: #333;
		font-size: 12px;
		width: 80px;
	}
	.td-value{
		color: tb-strong-color;
		font-size: 16px;
	}
	strong{
		display: block;
		color: tb-strong-color;
		font-size: 16px;
		font-weight: normal;
	}
	thead{
		background: transparent url(bar-bg-url) repeat-x;
		height: 40px;
		line-height: 40px;
		th{
			color: $button_color;
			font-weight: normal;
			border: 1px solid border-color;
		}
	}
}

.pri-support-content-wrap,.pri-channel-content-wrap{
	td{
		width: 33%;
		height: 100px;
	}
	.ui-datepicker-wrapper{
		margin: 5px auto;
