.pri-upload-img-container{
	position: relative;
	width: 180px;
	height: 195px;
	border: 1px solid #efefef;
	background: #fcfcfc;
	text-align: center;
	.button{
		margin: 80px auto 5px auto;
		position: relative;
		cursor: pointer;
	}
	p{
		color: #999;
		font-size: 12px;
	}
	.pre-image-container{
		display: none;
		position: absolute;
		top: 0;
		left: 0;
		width: 180px;
		height: 195px;
		.pri-img-close-icon{
			position: absolute;
			top:0;
			right:0;
			background: transparent url($icon) no-repeat -272px -419px;
			width: 25px;
			height: 25px;
			cursor:pointer;
		}
		img{
			width: 180px;
			height: 195px;
		}
	}
}

#uploadImgBtn{
	position: absolute;
	left: 0;
	top: 0;
	cursor: pointer;
	width: 87px;
	height: 31px;
	opacity: 0;
	filter:unquote('alpha(opacity=0)');
}

.pri-channel-list-wrap{
	position: absolute;
	z-index: 1;
	display: none;
	background: #fff;
	border-left: 1px solid #ddd;
	border-right: 1px solid #ddd;
	border-bottom: 1px solid #ddd;
	width: 470px;
	overflow:hidden;
	.fl{
		width: 230px;
		margin: 0;
	}
	.pri-channel-list{
		li{
			position: relative;
			padding-left: 10px;
			height: 40px;
			line-height: 40px;
			color: #666;
			border-bottom: 1px solid #ececec;
			border-right: 1px solid #ececec;
			&.active{
				a{
					color: #000;
				}
				i{
					visibility: hidden;
				}
				border-right: none;
			}
		}
		a{
			display: block;
			color:#666;
			width: 210px;
			white-space:nowrap;
			overflow:hidden;
			text-overflow:ellipsis;
			word-wrap:normal;
		}
		i{
			position: absolute;
			display: block;
			top: 13px;
			right: 5px;
			background: transparent url($icon) no-repeat -377px -390px;
			width: 9px;
			height: 14px;
		}
	}
}

.pri-updown-icon{
	display: inline-block;
	background: transparent url($icon) no-repeat 0 0;
	width: 14px;
	height: 9px;
	&.down{
		background-position:-165px -49px;
	}
	&.up{
		background-position: -165px -98px;
	}
}

.pri-updown-gray-icon{
	display: inline-block;
	background: transparent url($icon) no-repeat 0 0;
	width: 14px;
	height: 9px;
	&.down{
		background-position:-361px -392px;
	}
	&.up{
		background-position: -333px -389px;
	}
}

.pri-channel-wrap{
	position: relative;
	width: 470px;
	height: 30px;
	background: #fcfcfc;
	border: 1px solid #dbdbdb;
	a{
		position: absolute;
		top: 8px;
		right: 5px;
	}
	span{
		width: 430px;
		line-height: 30px;
		margin-left: 10px;
	}
}
.pri-subchannel-list{
	padding-top: 5px;
	li{
		height: 30px;
		line-height: 30px;
		padding: 0 10px;
		a{
			color: #666;
			&:hover,&:active{
				color: #d4b97a;
			}
		}
	}
}

#current-grade-desc{
	display: inline-block;
	*display: inline;
	*zoom: 1;
	width: 80px;
}

#next-grade-left{
	position:relative;
	top: -5px;
	width: 60px;
	font-size: 20px;
	text-align: right;
	display: inline-block;
	*display: inline;
	*zoom: 1;
}

.pri-icon{
	background: transparent url(pri-icon-url) no-repeat 0 0;
	display: inline-block;
	*display: inline;
	*zoom: 1;
	width: 86px;
	height: 86px;
	&.pri-icon-yyliang{
		background-position: 0 0;
	}
	&.pri-icon-qunliang{
		background-position:-97px 0;
	}
	&.pri-icon-channel{
		background-position:-199px 0;
	}
	&.pri-icon-up{
		background-position:-297px 0;
	}
	&.pri-icon-growth{
		background-position:-505px 0;
	}
	&.pri-icon-vcard{
		background-position:-399px 0;
	}
}

.bg-sp{
	background: transparent url(bg-sp-url) no-repeat 0 0;
	display: inline-block;
	*display: inline;
	*zoom: 1;
	&.btn-small{
		background-position: -27px -48px;
		width: 67px;
		height: 30px;
		color: btn-color
		line-height: 30px;
	}
}