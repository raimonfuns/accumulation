
/*登录模块*/
.login-piece {
	padding: 20px;
	width: 230px;
	height: 260px;
	background-color: #fff;
}

.login-msg-box {
	.un-reg-box {
		margin-top: 15px;
		padding: 0 18px 20px;
		.un-reg-msg {
			height: 20px;
			line-height: 20px;
			margin-bottom: 10px;
			.un-reg-icon {
				display:inline-block;
				background-image: url($login); 
				background-repeat: no-repeat;
				background-position: -261px -259px;
				width: 20px;
				height: 20px;
			}
			a {
				font-size: 16px; 
			}
			.login-click {
				color: #cdad5e;
				margin-left: 13px;
			}
			.more {
				color: #666;
				margin-left: 10px;
			}
		}
		
	}
	.user-msg-box {
		
		.user-info {
			position: relative;
			.user-photo {
				border-radius: 5px;
				overflow: hidden;
				width: 60px;
				height: 60px;
				img {
					width: 100%;
					height: 100%;
				}
			}
			.user-name {
				margin-left: 10px;
				width: 125px;
				dt {
					color: #333;
					font-size: 16px;
					height: 20px;
					line-height: 20px;
				}
				dd {
					padding-top: 10px;
					.svip-icon {
						background-image: url($login);
						background-repeat: no-repeat;
						display: inline-block;
						width: 33px;
						height: 14px;
					}
					.grade-01 {
						background-position: 0 -259px; 
					}
					.grade-02 {
						background-position: -39px -259px;
					}
					.grade-03 {
						background-position: -78px -259px;
					}
					.grade-04 {
						background-position: -117px -259px;
					}
					.grade-05 {
						background-position: -156px -259px;
					}
					.grade-06 {
						background-position: -198px -259px;
					}
				}	
			}
			.user-logout {
				color: #999;
				position: absolute;
				right: 0;
				top: 2px
			}
		}
		.svip-card {
			width: 176px;
			height: 58px;
			background-image: url($login); 
			background-repeat: no-repeat;
			margin-top: 10px;
			padding-left: 20px;
			padding-top: 12px;
			dt {
				font-size: 16px;
				font-weight: bold;
				height: 24px;
				line-height: 24px;
			}
			dd {
				span {
					line-height: 24px;
					margin-right: 12px
				}
			}
		}
		.scard-01 {
			background-position: -261px 0;
			color: #4c4c4c;
		}
		.scard-02 {
			background-position: -261px -84px;
			color: #4c4c4c;
		}
		.scard-03 {
			background-position: -261px -169px;
			color: #82580d;
		}
		.scard-04 {
			background-position: -487px 0;
			color: #82580b;
		}
		.scard-05 {
			background-position: -261px -84px;
			color: #a17408;
		}
		.scard-06 {
			background-position: -261px -169px;
			color: #fbe692;
		}
	}
	.user-pb {
		padding-bottom: 10px;
	}
	.login-desc-box {
		color: #6a6969;
		line-height: 18px;
		padding-top: 10px;
		p {
			span {
				color: #cdad5e
			}
		}
	}
}
.login-btn-box {
	overflow: hidden;
	a {
		background-image: url($login); 
		background-repeat: no-repeat;
		display: block;
		padding-top: 15px;
		padding-bottom: 15px;
		height: 20px;
		text-align: center;
		line-height: 20px;
		font-size: 18px;
		margin-top: 20px;
		i {
			background-image: url($login); 
			background-repeat: no-repeat;
			display: inline-block;
			width: 24px;
			height: 19px;
			float: left;
			cursor: pointer;
		}
		span {
			float: right;
			white-space: nowrap;
			cursor: pointer;
		}
	}
	.join-svip {
		background-position: 0 0;
		padding-left:60px;
		padding-right: 60px;
		color: #82570a;
		i {
			background-position: -310px -259px;
		}
		&:hover {
			background-position: 0 -61px;
		}
	}
	.upgrade-iden {
		background-position: 0 -131px;
		padding-left:45px;
		padding-right: 45px;
		color: #e8c162;
		i {
			background-position: -363px -257px;
		}
		&:hover {
			background-position: 0 -189px;
		}
	}
}
